<%= form_for @micropost do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: t("microposts.placeholder") %>
    </div>
    <%= f.submit t("microposts.post"), class: "btn btn-primary" %>
    <span class="image">
      <%= f.file_field :image, accept: Settings.file.valid_input %>
    </span>
<% end %>
